  <body>
    <nav class="navbar navbar-expand-lg py-3 w-100">
      <div class="container">
        <a class="navbar-brand" href="/">
          <img
            src="/assets/images/logo.png"
            alt="logo"
            width="46"
            height="33"
          />
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarTogglerDemo03">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item px-4">
              <a
                class="nav-link text-black fw-bold active fs-5"
                aria-current="page"
                href="/"
                >Home</a
              >
            </li>
            <li class="nav-item">
              {{#if isLogin}}
              <a
                class="nav-link fs-5 px-3 text-black"
                aria-current="page"
                href="/myproject"
                >Add Project</a
              >
              {{/if}}
            </li>
          </ul>
          <form class="d-flex" role="search">
            {{#if isLogin}}
              <button class="btn btn-ligt fs-5 py-1 navbtn">
              <a class="text-dark" href="#">Halo, {{user.name}}</a>
              </button>
              <button class="btn btn-ligt fs-5 mx-4 py-1 navbtn">
              <a class="text-dark" href="/logout">Logout</a>
              </button>
              {{else}}
             <button class="btn btn-ligt fs-5 py-1 navbtn">
              <a class="text-dark" href="/register ">Register</a>
              </button>
              <button class="btn btn-ligt fs-5 mx-4 py-1 navbtn">
              <a class="text-dark" href="/login">Login</a>
              </button>
            {{/if}}
            <button class="btn btn-dark fs-5 px-4 py-1 navbtn">
              <a href="/contact">Contact Me</a>
            </button>
          </form>
        </div>
      </div>
    </nav>
