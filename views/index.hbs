    <section class="myproject bg-light p-5">
      
      <p class="fs-1 fw-bolder text-center my-5 pb-5">MY PROJECT</p>
      <div class="container-fluid">
        <div class="row row-cols-1 row-cols-md-3 g-4 mb-5 cardcontain">
          
          {{#each dataBlog}}
          <div class="col "> 
            <div class="card p-3">
              <img
                src="uploads/{{this.image}}"
                class="card-img-top"
                alt="..."
              />
              <div class="card-body px-0 py-3">
                <h4 class="fw-bold fs-5 text-capitalize">
                <a href="/detail/{{this.id}}">
                    {{this.name}}
                </a>
                </h4>
                <h4 class="fw-light fs-6 text-secondary">durasi : {{this.duration}}</h4>
                <div class="mb-5">
                <p class="card-text py-3 ">
                  {{this.description}} 
                </p>
                </div>
                <div>
                  <div class="row row-cols-auto">
                    
                    <div class="col">
                      {{#if technologies.[0]}}<i class="fa-brands fa-{{this.technologies.[0]}} fa-3x"></i>{{/if}}
                       {{#if technologies.[1]}}<i class="fa-brands fa-{{this.technologies.[1]}} fa-3x"></i>{{/if}}
                        {{#if technologies.[2]}}<i class="fa-brands fa-{{this.technologies.[2]}} fa-3x"></i>{{/if}}
                         {{#if technologies.[3]}}<i class="fa-brands fa-{{this.technologies.[3]}} fa-3x"></i>{{/if}}
                    </div>
                    
                  </div>
                </div>

                <div class="d-flex justify-content-evenly mt-5">
                  {{#if isLogin}}
                  <a
                    class="link-light bg-black text-decoration-none px-5 fw-semibold btcard"
                    href="/editproject/{{this.id}}"
                    >edit</a
                  >
                  <a
                    class="link-light bg-black text-decoration-none px-5 fw-semibold btcard"
                    href="/delete-myproject/{{this.id}}"
                    >delete</a
                  >
                  {{/if}}

                </div>
              </div>
            </div>    
          </div>
          {{/each}}
        </div>
      </div>
    </section>
